<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Library System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-route="SiteInfo">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="Index">Books</a>
                    </li>
                    @if (UserManager.IsSignedIn(User) == false) //Check Cookies If LOgin
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="SignUp">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="SignIn">Sign In</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="SignOut">Sign Out</a>
                        </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>
</header>